    <div class="container__register">
        <div class="grid">
            <div class="contain__ticketseller-banner">
                <img src="./img/banner.png" alt="Banner" width="1120px" height="456px" style="opacity: 0.5" />
            </div>
            <div class="container__form">
                <form method="POST" action="" id="register-form" class="form">
                    <p class="form__heading">Đăng ký</p>
                    <div class="form-group">
                        <label for="usernamename" class="form-label">Tên tài khoản <span class="asterisk">*</span></label>
                        <input id="username" name="username" rules="required|noSpace|nospace" type="text"
                            placeholder="Nhập tài khoản" class="form-control-register">
                        <span class="form-message"></span>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu <span class="asterisk">*</span></label>
                        <div class="password-input-wrapper">
                            <input id="password" name="password" rules="required|password" type="password"
                                placeholder="Nhập mật khẩu" class="form-control-register">
                            <span class="toggle-password" onclick="togglePasswordVisibility('password')"><i class="fas fa-eye-slash"></i></span>
                        </div>
                        <span class="form-message" style="margin-top: -1.5rem;"></span>
                    </div>
                    <div class="form-group">
                        <label for="password_confirmation" class="form-label">Nhập lại mật khẩu <span class="asterisk">*</span></label>
                        <div class="password-input-wrapper">
                            <input id="password-1" name="password-1" rules="required|matchpassword:#password"
                                type="password" placeholder="Nhập lại mật khẩu" class="form-control-register">
                            <span class="toggle-password" onclick="togglePasswordVisibility('password-1')"><i class="fas fa-eye-slash"></i></span>
                        </div>
                        <span class="form-message" style="margin-top: -1.5rem;"></span>
                    </div>

                    <div class="form-group">
                        <label for="fullname" class="form-label">Họ và tên <span class="asterisk">*</span></label>
                        <input id="fullname" name="fullname" rules="required|noSpace" type="text"
                            placeholder="VD: Nguyễn Văn A" class="form-control-register">
                        <span class="form-message"></span>
                    </div>
                    <div class="form-group--large">
                        <div class="form-group">
                            <label for="phonenumber" class="form-label">Số điện thoại <span class="asterisk">*</span></label>
                            <input id="phonenumber" name="phonenumber" rules="required|phonenumber" type="tel"
                                placeholder="VD: 0905312145" class="form-control-register">
                            <span class="form-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-label">Email <span class="asterisk">*</span></label>
                            <input id="email" name="email" rules="required|email" type="text"
                                placeholder="VD: sv@gmail.com" class="form-control-register">
                            <span class="form-message"></span>
                        </div>
                    </div>
                    <div class="message-error" style="min-height: 1.6rem;">{{message}}</div>
                    <button class="form-submit-login">Đăng ký</button>
                    <div class="nav__form">
                        <span class="nav__message">Bạn đã có tài khoản ?&nbsp;</span>
                        <a href="./login" class="nav__link">Đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

