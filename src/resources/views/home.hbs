<script>
    const inputList = document.querySelectorAll('.searchTicket__item-right');
    const dataListContainerList = document.querySelectorAll('.hide-left');
    var startProvince = document.querySelector('.startProvince');
    var EndProvince = document.querySelector('.endProvince');
    var searchBtn = document.querySelector('.searchBtn');
    var search = document.querySelector('.searchBtn_btn');
    var ticket__date = document.querySelector('.ticket-date');
    const today = new Date().toISOString().split('T')[0];
    ticket__date.setAttribute('min', today);
    search.onclick = function () {
        if (startProvince.value && EndProvince.value && ticket__date.valueAsDate) {
            searchBtn.href = `./buy-ticket-step2?start=${startProvince.value}&end=${EndProvince.value}&time=${ticket__date.valueAsDate}`;
            searchBtn.click();
        }
        else {
            document.getElementById('id02').style.display = 'block';
        }
    }
    inputList.forEach((input, index) => {
        const dataListContainer = dataListContainerList[index];
        const dataItem = dataListContainer.querySelectorAll('button');

        input.addEventListener('mousedown', () => {
            dataListContainer.style.display = 'block';
        });

        dataItem.forEach(item => {
            item.addEventListener('click', () => {
                const inputField = input.querySelector('input');
                inputField.value = item.textContent;
                dataListContainer.style.display = 'none';
            })
        })

        document.addEventListener('mousedown', (event) => {
            if (!input.contains(event.target) && !dataListContainer.contains(event.target)) {
                dataListContainer.style.display = 'none';
            }
        });
    });

</script>

