<script>
    var navLinkParents = document.querySelectorAll(".nav-link-parent");
    var startTime = document.querySelector('#start-time');
    var endTime = document.querySelector('#end-time');
    var startDay = document.getElementById('start-date');
    var cbb__startProvince = document.querySelector('#start-province');
    var cbb__Type = document.querySelector('#type-coach');
    var endProvince = document.querySelector('#end-province');
    var startStation = document.querySelector('#start-station');
    var endStation = document.querySelector('#end-station');
    var cbbRoute = document.querySelector('#route');
    var aLink = document.querySelector('.changeLink');
    var message = document.querySelector('.message-error');
    const today = new Date().toISOString().split('T')[0];
    startDay.setAttribute('min', today);
    var hours = 0;
    cbbRoute.onchange = function(){
        fetch__directRoute();
    };
    startTime.onchange = function(){
        var start = startTime.valueAsDate;
        start.setHours(start.getHours()+hours);
        endTime.valueAsDate = start;
        if(cbb__Type.value>0) fetch__Coach();
    }
    startDay.onchange = function(){
        var licensePlate = document.querySelector('#license-plate');
        if(cbb__Type.value>0) fetch__Coach();
    }
    var cbb__startProvince = document.querySelector('#start-province');
    cbb__startProvince.onchange = function(){
        endProvince.value = cbb__startProvince.value;
        fetch__dataStation();
        if(cbb__Type.value>0) fetch__Coach();
    }
    cbb__Type.onchange  = function(){
        fetch__Coach();
    }
    function fetch__directRoute(){
        const url = `/admin/create-schedule/getDirect?route=${cbbRoute.value}`;
        fetch(url)
            .then(function(response){
                return response.json()
            })
            .then(function(data){
                var type = Object.getOwnPropertyNames(data);
                var hour = type[0],distance = type[1],direct = type[2];
                var durationElement = document.querySelector('.duration');
                durationElement.innerHTML = `Thời gian dự kiến: ${data[hour]} tiếng`;
                hours = data[hour];
                var html1='',html2='';
                html1 = '<option value="0" style="display: none;">-- Tỉnh đi --</option>';
                html2 = '<option value="0" style="display: none;">-- Tỉnh đến --</option>';
                for(var x of data[direct]){
                    html1 += `<option value="${x.iddirectedroutes}">${x.startProvince}</option>`
                    html2 += `<option value="${x.iddirectedroutes}">${x.endProvince}</option>`
                }
                cbb__startProvince.innerHTML = html1;
                endProvince.innerHTML = html2;
                startStation.innerHTML = '<option value="0" style="display: none;">Chọn bến đi</option>';
                endStation.innerHTML = '<option value="0" style="display: none;">Chọn bến đến</option>';
                var licensePlate = document.querySelector('#license-plate');
                licensePlate.innerHTML = '<option value="0" style="display: none;">Chọn biển số xe</option>';
                message.innerHTML = '';
                var start = startTime.valueAsDate;
                start.setHours(start.getHours()+hours);
                endTime.valueAsDate = start;
            })
            .catch(function(err){
                console.error(err);
            })

    }
    function fetch__Coach(){
        const url = `/admin/create-schedule/getCoach?direct=${cbb__startProvince.value}&type=${cbb__Type.value}&time=${startTime.value}&day=${startDay.value}`;
        fetch(url)
            .then(function(response){
                return response.json()
            })
            .then(function(data){
                var type = Object.getOwnPropertyNames(data);
                var coachs = type[1],mess = type[0],seat = type[2];
                var html1 = '';
                var seatDiv = document.querySelector('.number-seat');
                var licensePlate = document.querySelector('#license-plate');
                html1 = '<option value="0" style="display: none;">Chọn biển số xe</option>';
                for(var x of data[coachs]){
                    html1 += `<option value="${x.idCoach}">${x.licensePlate}</option>`;
                }
                licensePlate.innerHTML = html1;
                message.innerHTML = `<p>${data[mess]}</p>`;
                seatDiv.innerHTML = `Số lượng: ${data[seat]} ghế`;
            })
            .catch(function(err){
                console.error(err);
            })
    }
    function fetch__dataStation(){
        const url = `/admin/create-schedule/getDataStation?route=${cbb__startProvince.value}`;
        fetch(url)
            .then(function(response){
                return response.json()
            })
            .then(function(data){
                var type = Object.getOwnPropertyNames(data);
                var end = type[1],start = type[0];
                var html1 = '',html2='';
                html1 = '<option value="0" style="display: none;">Chọn bến đi</option>';
                html2 = '<option value="0" style="display: none;">Chọn bến đến</option>';
                for(var x of data[start]){
                    html1 += `<option value="${x.idStation}">${x.stationName}</option>`;
                }
                for(var x of data[end]){
                    html2 += `<option value="${x.idStation}">${x.stationName}</option>`;
                }
                startStation.innerHTML = html1;
                endStation.innerHTML = html2;
            })
            .catch(function(err){
                console.error(err);
            })
    };
    navLinkParents.forEach((navLinkParent) => {
        var dropdownIcon = navLinkParent.querySelector(".dropdown");
        navLinkParent.addEventListener("click", (event) => {
            event.stopPropagation();
            var navLinkShow = navLinkParent.nextElementSibling;
            navLinkShow.classList.toggle("active");
            dropdownIcon.classList.toggle("fa-caret-down");
            dropdownIcon.classList.toggle("fa-caret-up");
        });
    });

    var item = document.querySelectorAll(".nav-link-show-item");
    item.forEach((a) => {
        var b = a.querySelector("i");
        a.addEventListener("click", () => {
            b.classList.toggle("fa-caret-right");
        })
    })
</script>

<script>
    function displayTime() {
        var date = new Date();
        var hour = date.getHours();
        var minute = date.getMinutes();
        var second = date.getSeconds();
        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();
        var meridiem = hour >= 12 ? "PM" : "AM";

        day = addZero(day);
        month = addZero(month);
        hour = hour % 12;
        hour = hour ? hour : 12;
        minute = addZero(minute);
        second = addZero(second);

        document.getElementById("clock").innerHTML = hour + ":" + minute + ":" + second + " " + meridiem;
        document.getElementById("date").innerHTML = day + "/" + month + "/" + year;

        setTimeout(displayTime, 1000);
    }

    function addZero(num) {
        return num < 10 ? "0" + num : num;
    }

    displayTime();
</script>
